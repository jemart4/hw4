<h1><%= @place["name"] %></h1>

<h2>My Entries</h2>
<% for entry in @entries.where({"user_id"=> session["user_id"]}) %>
  <h3><%= entry["title"] %></h3>
  <h4><%= entry["occurred_on"] %></h4>
  <p><%= entry["description"] %></p>
<% end %>

<p>
  <a class="btn btn-outline-secondary ms-2" aria-current="page" href="/entries/new?place_id=<%= @place["id"] %>" >New Entry</a>
</p>

<p>
  <a href="/places">Back to All Places</a>
</p>